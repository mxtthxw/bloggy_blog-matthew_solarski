
<hr>
<div class="username"><%= @user.username %></div>

Name: <%= @user.firstname %> <%= @user.lastname %><br>
Email: <%= @user.email %><br>
Age: <%= @user.age %><br>

<% if logged_in? && @user.id == @current_user.id %>
<%= link_to "Edit Your Profile", edit_user_path %>
<br>
<%= link_to "Click Here to Bloggy Blog", new_post_path %>
<% else %>
<% end %>

<hr>

<div class="subheader">My Bloggy Blogs:</div>

<% @posts.each do |post| %>

	<div class="post-title"><%= link_to post.title, post_path(post), :style=>'text-decoration: none; color: red' %></div><br>
	<%= post.body %><br><br>
	<!-- <div class="post-tag"><%= post.post_tags_id %></div><br> -->
	<span class="post-date">Posted: <%= post.created_at %></span><br><br>

<% end %>

<hr>

<%= link_to "Return to Users List", users_path %>
<br>
<%= link_to "Check Out the Bloggy Blog Feed", posts_path %>
<br>
<% if logged_in? && @user.id == @current_user.id %>
<%= link_to "DELETE YOUR ACCOUNT FOREVER", user_path(@user.id), method: :delete %>
<% else %>
<% end %>

